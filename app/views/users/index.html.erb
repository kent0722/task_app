<% provide(:title, "Users") %>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
        </tr>
      </thead>  
        <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, users_path(@user) %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>
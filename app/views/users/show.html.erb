<% provide(:title, @user.name) %>
<h1>プロフィール</h1>
<div class="container">
  <div class="row">
    <div class="col-md-7 col-md-offset-2">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="show-list col-md-3"><%= User.human_attribute_name :id %></th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th class="show-list"><%= User.human_attribute_name :name %></th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th class="show-list"><%= User.human_attribute_name :email %></th>
            <td><%= @user.email %></td>
          </tr> 
          <tr>
            <th class="show-list"><%= User.human_attribute_name :created_at %></th>
            <td><%= @user.created_at %></td>
          </tr>
        </tbody>
      </table>
    </div>    
  </div>
</div>
  

<% provide(:title, @user.name) %>

<h1>ユーザー情報の更新</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @user, url: user_path(@user), local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
    
      <%= f.label :name, class: "label-login" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :email, class: "label-login" %>
      <%= f.text_field :email, class: 'form-control' %>
      
      <%= f.label :password, class: "label-login" %>
      <%= f.text_field :password, class: 'form-control' %>
      
      <%= f.label :password_confirmation, class: "label-login" %>
      <%= f.text_field :password_confirmation, class: 'form-control' %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-block", style: "margin-top: 10px;" %>
    <% end %>
  </div>
</div>
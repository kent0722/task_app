<% provide(:title, "Edit Task") %>

<h1>タスク編集</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user), local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: @task %>
       
      <%= f.label :name, class: "label-name" %>
      <%= f.text_field :name, class: 'form-control' %>
      
      <%= f.label :description, class: "label-name" %>
      <%= f.text_area :description, rows: 5, class: 'form-control' %>
    
      <%= f.submit "更新", class:"btn btn-primary", style: "margin-top: 10px;" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class:"btn btn-default", style: "margin-top: 10px;" %>
    <% end %>
  </div>
</div>


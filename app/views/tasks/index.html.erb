<% provide(:title, @user.name) %>

<h1><%= @user.name %>のタスク一覧</h1>

<div class="row"> 
  <div class="col-md-10 col-md-offset-1">
    <%= link_to "タスク新規作成","", class:"btn btn-primary btn-lg pull-right" %>
    <table class="table table-hover">
    <thead>
      <tr>
        <td><%= Task.human_attribute_name :name %></td>
        <td><%= Task.human_attribute_name :created_at %></td>
        <td></td>
        <td></td>
      </tr>
    </thead>  
  
   <tbody>
    <% @tasks.each do |task| %>
     <tr>
        <td><%= link_to task.name,user_task_path(@user, task) %></td>
        <td><%= l(task.created_at, format: :long) %></td>
        <td><%= link_to "編集", edit_user_task_path(@user, task), class: "btn btn-success" %>
            <%= link_to "削除", user_task_path(@user, task), method: :delete,
            data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
        </td>
     </tr>
    <% end %> 
   </tbody>
  </table>
  </div>
</div>